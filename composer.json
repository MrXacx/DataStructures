{
    "name": "mrxacx/data-structures",
    "description": "Essential data structures for computer science, now in PHP",
    "type": "project",
    "license": "MIT",
    "readme": "./README.md",
    "authors": [
        {
            "name": "Ariel Santos",
            "email": "misterxacx@gmail.com",
            "homepage": "https://github.com/MrXacx/",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "DataStructures\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpunit/phpunit": "^11.4"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.3"
        }
    },
    "scripts": {
        "check-style": "php-cs-fixer fix --diff --verbose --dry-run .",
        "fix-style": "php-cs-fixer fix .",
        "test": "vendor/bin/phpunit --testdox --colors --display-warnings --display-notices --display-errors --display-deprecations --fail-on-risky --fail-on-skipped --fail-on-incomplete tests/"
    }
}
